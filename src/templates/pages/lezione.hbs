{{> header }}
<article class="entry entry--largeSidebar clearfix">

    <header class="entry__header bg-sample">
        <div class="entry__row">
            <div class="entry__header-inner">
                <p class="entry__type">
                    <span class="typcn typcn-mortar-board"></span> samples
                </p>
                <h1 class="entry__title">
                    {{ heading }}
                </h1>
                <ul class="progress">
                    <li class="progress__item progress__item--complete"><a href="" class="progress__link">1</a></li>
                    <li class="progress__item progress__item--complete"><a href="" class="progress__link">2</a></li>
                    <li class="progress__item progress__item--complete"><a href="" class="progress__link">3</a></li>
                    <li class="progress__item progress__item--complete"><a href="" class="progress__link">4</a></li>
                    <li class="progress__item progress__item--current"><a href="" class="progress__link">5</a></li>
                    <li class="progress__item">6</li>
                    <li class="progress__item">7</li>
                    <li class="progress__item">8</li>
                    <li class="progress__item">9</li>
                    <li class="progress__item">10</li>
                    <li class="progress__item">11</li>
                    <li class="progress__item">12</li>
                </ul>
            </div>
        </div>
    </header>

    <div class="entry__row">

        <aside class="entry__summary">
            <div class="clearfix">
                    <ul class="attachments">
                        <li class="attachment no-">
                            <a href="" class="attachment__link">
                                <span class="typcn typcn-attachment"></span>
                                Nomefile allegato #1  
                                <span class="attachment__type">(.pdf)</span>
                                </a>
                            </li>
                        <li class="attachment">
                            <a href="" class="attachment__link">
                                <span class="typcn typcn-attachment"></span>
                                Nomefile allegato #1  
                                <span class="attachment__type">(.ppt)</span>
                                </a>
                            </li>
                        <li class="attachment">
                            <a href="" class="attachment__link">
                                <span class="typcn typcn-attachment"></span>
                                Nomefile allegato #1  
                                <span class="attachment__type">(.doc)</span>
                                </a>
                            </li>
                        <li class="attachment">
                            <a href="" class="attachment__link">
                                <span class="typcn typcn-attachment"></span>
                                Nomefile allegato #1  
                                <span class="attachment__type">(.docx)</span>
                                </a>
                            </li>
                    </ul>
                </div>
        </aside>

        <div class="entry__content">
            <div class="entry__text">
                {{md 'src/content/lezione.md'}}
            </div>


            <div class="entry__action">
                <a href="../test.html" class="button expand">
                    <span class="typcn typcn-edit"></span>
                    Vai ad una pagina con delle form
                </a>
            </div>
        </div> 
    </div>
        

</article>
{{> footer }}